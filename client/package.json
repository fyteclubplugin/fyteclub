{
  "name": "fyteclub-client",
  "version": "3.0.4",
  "description": "FyteClub client for FFXIV mod synchronization",
  "main": "src/daemon.js",
  "bin": {
    "fyteclub": "./bin/fyteclub.js"
  },
  "scripts": {
    "start": "node bin/fyteclub.js",
    "dev": "nodemon bin/fyteclub.js",
    "test": "jest",
    "build": "pkg bin/fyteclub.js --target node18-win-x64 --output dist/fyteclub.exe"
  },
  "keywords": [
    "ffxiv",
    "mods",
    "client"
  ],
  "author": "FyteClub",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
