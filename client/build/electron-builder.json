{
  "appId": "com.stallionsync.app",
  "productName": "StallionSync",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "ui/**/*",
    "assets/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "msi",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "publisherName": "StallionSync",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "StallionSync"
  },
  "msi": {
    "oneClick": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": null
}